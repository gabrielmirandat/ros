cmake_minimum_required(VERSION 2.8.3)
project(tr1)

find_package(catkin REQUIRED COMPONENTS
  roscpp
  std_msgs
  geometry_msgs
  sensor_msgs
  p2os_msgs
  tf
)

catkin_package(
 INCLUDE_DIRS include
 CATKIN_DEPENDS roscpp std_msgs geometry_msgs sensor_msgs tf p2os_msgs
)

include_directories(
  include
)

include_directories(
  ${catkin_INCLUDE_DIRS}
)

add_executable(tcc_node src/main.cpp src/tcc.cpp)
target_link_libraries(tr1_node ${catkin_LIBRARIES})
